theme:
  name: 'material'
  features:
    - navigation.top
    - navigation.top.sticky
    - navigation.tabs
    - navigation.indexes
  language: es
  palette:
    # Light mode
    - media: "(prefers-color-scheme: light)"
      scheme: default
      primary: "blue grey"
      accent: green
      toggle:
        icon: material/toggle-switch-off-outline
        name: Cambiar a modo oscuro
    # Dark mode
    - media: "(prefers-color-scheme: dark)"
      scheme: slate
      primary: "blue grey"
      accent: green
      toggle:
        icon: material/toggle-switch
        name: Cambiar a modo claro

# Extensions
markdown_extensions:
  - footnotes
  - pymdownx.arithmatex:
      generic: true
  - pymdownx.tasklist:
      custom_checkbox: true
  - def_list
  - pymdownx.critic
  - pymdownx.caret
  - pymdownx.keys
  - pymdownx.mark
  - pymdownx.tilde
  - toc:
      permalink: true


plugins:
  - search
  - roamlinks
  - mermaid2

extra_javascript:
  - https://unpkg.com/mermaid/dist/mermaid.min.js
  - javascripts/mathjax.js
  - https://polyfill.io/v3/polyfill.min.js?features=es6
  - https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js


extra:
  static:
    - carpe
